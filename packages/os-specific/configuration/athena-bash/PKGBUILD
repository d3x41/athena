pkgname=athena-bash
pkgver=1.0.0
pkgrel=1
pkgdesc="Bash for Athena."
arch=('any')
license=("custom")
depends=('bash' 'blesh' 'fastfetch' 'zoxide')
source=(".bash_aliases"
        ".blerc")

package() {
  install -dm 755 "${pkgdir}/etc/skel"

  install -Dm 644 .bash_aliases "${pkgdir}/etc/skel/.bash_aliases"
  install -Dm 644 .blerc "${pkgdir}/etc/skel/.blerc"
}
