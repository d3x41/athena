pkgname=athena-zsh
pkgver=1.0.2
pkgrel=1
pkgdesc="Zsh for Athena."
arch=('any')
license=("custom")
depends=('zsh' 'zsh-autosuggestions' 'zsh-history-substring-search' 'zsh-syntax-highlighting' 'powerline-fonts')
source=("shopt"
        ".zshrc")

package() {
  install -dm 755 "${pkgdir}/etc/skel"
  install -dm 755 "${pkgdir}/usr/bin"

  install -Dm 644 .zshrc "${pkgdir}/etc/skel/.zshrc"
  install -Dm 755 shopt "${pkgdir}/usr/bin/shopt"
}
