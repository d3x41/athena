source=("$pkgname.tar.gz")
sha512sums=('f017b6bdc042255cd813234039a8f38d63317e25f9836cdbfe983c76cf91a2b5c861d44eeedbdb3a916c5f6e613fbcdf9a7664d095bff953b9ee3107846ce7de')

package() {
